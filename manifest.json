{
  "name": "Zen Extension",
  "description": "Go Zen Mode",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "declarativeNetRequest", "declarativeNetRequestWithHostAccess"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/"],
      "js": ["content.js"],
      "css": ["content.css"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}
